{
  "buildCommand": "cd frontend && npm install --no-package-lock && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install --no-package-lock",
  "devCommand": "cd frontend && npm run dev",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}